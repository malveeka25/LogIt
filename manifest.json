{
    "manifest_version": 2,
    "name": "Logit - Daily Checkins",
    "description": "This extension allows you to keep custom daily notes, without sharing any data anywhere.",
    "version": "1.0",
    "permissions": ["tabs", "storage"],

    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

    "browser_action": {
      "default_icon": "external/img/icon.png",
      "default_popup": "popup.html"
    }
}